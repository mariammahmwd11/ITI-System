@model List<Course>
@{
    ViewData["Title"] = "Course List";
    Layout = "_MyLayout";
}
@section option_section{
<p>View Our Courses</p>
}
<div class="card-body p-4">

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-primary text-center">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Degree </th>
                <th>Min degree</th>
                <th>hours</th>
                @if (User.IsInRole("Admin"))
                {
                    <th>dept ID</th>
                    <th>Edit</th>
                    <th>Result</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.degree</td>
                <td>@item.minDegree</td>
                <td>@item.hours</td>
                @if(User.IsInRole("Admin"))
                {
                  <td>@item.deptId</td>
                    <td><a asp-action="Edit" asp-controller="Course" asp-route-id="@item.Id" class="btn btn-primary">Edit</a></td>
                    <td><a asp-action="Course_Result" asp-controller="Course" asp-route-id="@item.Id"> crs Result</a>    </td>
                }
            </tr>
            }
          
        </tbody>
    </table>
    @if(User.IsInRole("Admin"))
     {
    <a asp-action="AddCourse" asp-controller="Course" class="btn btn-primary btn-lg">Add New</a>
                }
</div>
