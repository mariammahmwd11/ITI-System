@model List<crsResult>
@{
	ViewData["Title"] = "Trainee Results";
	
}
@section option_section {
	<p>View all Trainee Results</p>
}
<table class="table table-bordered table-hover align-middle">
	<thead class="table-primary text-center">
		<tr>
			
			<th>Course Name</th>
			<th>Degree</th>
			<th>max Degree</th>
			<th>Status</th>
		</tr>
	</thead>
	<tbody>
		
		
					@foreach (var item in Model)
					{
						var state = item.degree >= item.course.minDegree ? "Passed" : "Failed";
						var color = item.degree >= item.course.minDegree ? "table-success" : "table-danger";
						<tr class="@color">
						<td>@item.course?.Name</td>
						<td>@item.degree</td>
						<td>@item.course.degree</td>
						<td >@state</td>
						</tr>
					}
				
		
					
		
			
				
	</tbody>
</table>